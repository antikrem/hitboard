<Window x:Class="hitboard.SaveAsDialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hitboard"
        mc:Ignorable="d"
        Title="SaveAs" Height="70" Width="550">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name ="SaveLocationTextBox" 
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                          Margin="3"/>

        <Button x:Name ="SaveButton" Content="Save" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Click="SaveButton_Click" Margin="3"/>
        <Button x:Name ="CancelButton" Content="Cancel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="2" Click="CancelButton_Click" Margin="3"/>
    </Grid>
</Window>
